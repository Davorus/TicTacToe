{
    "tasks": [
       {
          "type": "cppbuild",
          "label": "C/C++: g++.exe Aktive Datei kompilieren",
          "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
          "args": [
             "-fdiagnostics-color=always",
             "-g",
             "-I",
             "Handler/",
             "-I",
             "Player/",
             "${workspaceFolder}\\*.cpp",
             "Handler/Game_Handler.cpp",
             "Handler/Menu_Handler.cpp",
             "Handler/Playfield_Handler.cpp",
             "Handler/Player_Handler.cpp",
             "Player/Player.cpp",
             "Player/Human_Player.cpp",
             "Player/Bot.cpp",
             "Player/Random_Bot.cpp",
             "Player/Smart_Bot.cpp",
             "-o",
             "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
          ],
          "options": {
             "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
             "$gcc"
          ],
          "group": {
             "kind": "build",
             "isDefault": true
          },
          "detail": "Vom Debugger generierte Aufgabe."
       },
       {
          "type": "cppbuild",
          "label": "Remove exe",
          "command": "del",
          "args": [
             "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
          ]
       }
    ],
    "version": "2.0.0"
 }